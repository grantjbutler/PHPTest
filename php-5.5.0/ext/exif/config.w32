// vim:ft=javascript

ARG_ENABLE("exif", "exif", "no");

if (PHP_EXIF == "yes") {
	if (ADD_EXTENSION_DEP('exif', 'mbstring')) {
		EXTENSION("exif", "exif.c");
		AC_DEFINE('HAVE_EXIF', 1, 'Have exif');
	} else {
		WARNING("exif support can't be enabled, libxml is not enabled")
		PHP_EXIF = "no"
	}
}
